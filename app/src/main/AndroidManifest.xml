<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.nitish.paymatrixandroidapp">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/paymatrix_icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ForgotPasswordActivity"></activity>
        <activity android:name=".Pdf" />
        <activity android:name=".NavigationActivity" />
        <activity
            android:name=".UploadFileActivity"
            android:theme="@style/AppTheme.SliderActivityTheme" />
        <activity
            android:name=".UserProfileActivity"
            android:theme="@style/AppTheme.SliderActivityTheme" />
        <activity
            android:name=".TranscationDetailsActivity"
            android:theme="@style/AppTheme.SliderActivityTheme" />
        <activity
            android:name=".TransactionsActivity"
            android:theme="@style/AppTheme.SliderActivityTheme" />
        <activity
            android:name=".PayRentArchiveActivity"
            android:theme="@style/AppTheme.SliderActivityTheme" />
        <activity
            android:name=".PayRentActivity"
            android:theme="@style/AppTheme.SliderActivityTheme" />
        <activity
            android:name=".RentAgreementActivity"
            android:theme="@style/AppTheme.SliderActivityTheme" />
        <activity
            android:name=".AddPropertyActivity"
            android:theme="@style/AppTheme.SliderActivityTheme" />
        <activity android:name=".UserDashboardActivity" />
        <activity android:name=".LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity" />
    </application>

</manifest>